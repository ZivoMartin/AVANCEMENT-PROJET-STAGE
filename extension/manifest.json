{
    "manifest_version": 3,
    "name": "MartinRecorder",
    "version": "0.1",
    "description": "Record user actions",
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "js": ["recorder.js"],
          "matches": [
            "https://*/*"
          ]
        }
      ]
}